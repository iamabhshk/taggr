NODE_ENV=development
PORT=5000

# MongoDB
DATABASE_URL=mongodb://localhost:27017/taggr
# Or MongoDB Atlas:
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/taggr?retryWrites=true&w=majority

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# JWT (for extended sessions - optional)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# npm Registry (for package publishing)
NPM_AUTH_TOKEN=your_npm_auth_token
NPM_REGISTRY=https://registry.npmjs.org

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
